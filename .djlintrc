{
    "profile": "jinja",
    "indent": 4,
    "max_line_length": 100,
    "ignore": [
        "J018", "J019", "J020", "J021",
        "T001", "T002", "T003",
        "H006", "H017", "H023", "H025", "H031"
    ],
    "include": "templates/**/*.jinja",
    "custom_blocks": "test_setup,test_execution,test_verification,test_cleanup,test_implementation,imports,fixtures",
    "jinja_block_start_string": "{%",
    "jinja_block_end_string": "%}",
    "jinja_variable_start_string": "{{",
    "jinja_variable_end_string": "}}",
    "jinja_comment_start_string": "{#",
    "jinja_comment_end_string": "#}",
    "format_attribute_template_tags": true,
    "format_python": true,
    "python_indent": 4,
    "preserve_blank_lines": true,
    "preserve_leading_space": true,
    "line_break_after_multiline_tag": true
}